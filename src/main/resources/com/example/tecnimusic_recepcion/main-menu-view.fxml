<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tecnimusic_recepcion.MainMenuController" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@/logo.png" />
        </image>
        <VBox.margin>
            <Insets bottom="20.0" />
        </VBox.margin>
    </ImageView>

    <Button fx:id="createServiceSheetButton" onAction="#onCreateServiceSheetClicked" prefHeight="40.0" prefWidth="320.0" minWidth="320.0" text="Crear Nueva Hoja de Servicio">
        <font>
            <Font size="14.0" />
        </font>
    </Button>

    <Button fx:id="manageServiceSheetsButton" onAction="#onManageServiceSheetsClicked" prefHeight="40.0" prefWidth="320.0" minWidth="320.0" text="Consultar/Gestionar Hojas de Servicio">
        <font>
            <Font size="14.0" />
        </font>
    </Button>

    <Button fx:id="manageClientsButton" onAction="#onManageClientsClicked" prefHeight="40.0" prefWidth="320.0" minWidth="320.0" text="Gestión de Clientes">
        <font>
            <Font size="14.0" />
        </font>
    </Button>

    <Button fx:id="settingsButton" onAction="#onSettingsClicked" prefHeight="40.0" prefWidth="320.0" minWidth="320.0" text="Configuración">
        <font>
            <Font size="14.0" />
        </font>
    </Button>

    <Button onAction="#onExitClicked" prefHeight="40.0" prefWidth="320.0" minWidth="320.0" text="Salir">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
</VBox>
