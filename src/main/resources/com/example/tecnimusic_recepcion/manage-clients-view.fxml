<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tecnimusic_recepcion.ManageClientsController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Buscar Cliente:">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="searchField" prefWidth="300.0" promptText="Buscar por nombre, teléfono o dirección..." />
            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="clientsTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Nombre" />
                <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="Teléfono" />
                <TableColumn fx:id="addressColumn" prefWidth="300.0" text="Dirección" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="50.0" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddButton" text="Añadir" />
                <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditButton" text="Editar" />
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteButton" text="Eliminar" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExitButton" text="Salir" />
            </children>
        </HBox>
    </bottom>
    <right>
        <VBox fx:id="formVBox" alignment="TOP_CENTER" prefWidth="250.0" spacing="10.0" visible="false" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Detalles del Cliente">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="Nombre:" />
                <TextField fx:id="nameField" />
                <Label text="Teléfono:" />
                <TextField fx:id="phoneField" />
                <Label text="Dirección:" />
                <TextField fx:id="addressField" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveButton" text="Guardar" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButton" text="Cancelar" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </right>
</BorderPane>
