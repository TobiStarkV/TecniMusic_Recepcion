<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.fxmisc.richtext.StyleClassedTextArea?>

<BorderPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tecnimusic_recepcion.AccesoriosDialogController">
    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <StyleClassedTextArea fx:id="accesorioField" styleClass="accesorios-text-area" HBox.hgrow="ALWAYS" />
                        <Button onAction="#onAddAccesorio" text="AÃ±adir" styleClass="add-accessory-button" />
                    </children>
                </HBox>
                <ListView fx:id="accesoriosListView" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button onAction="#onRemoveAccesorio" text="Eliminar Seleccionado" HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets right="50.0" />
                    </HBox.margin>
                </Button>
                <Button onAction="#onAceptar" text="Aceptar" styleClass="button-primary" />
                <Button onAction="#onCancelar" text="Cancelar" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
