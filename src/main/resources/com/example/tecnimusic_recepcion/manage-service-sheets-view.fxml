<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tecnimusic_recepcion.ManageServiceSheetsController" stylesheets="@styles.css">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Buscar:">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="searchField" onAction="#onSearchAction" prefWidth="350.0" promptText="Por N° de Orden, Cliente, Serie, Marca o Modelo..." />
                <Button onAction="#onSearchAction" text="Buscar" />
            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="serviceSheetsTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="orderNumberCol" prefWidth="120.0" text="N° Orden" />
                <TableColumn fx:id="dateCol" prefWidth="100.0" text="Fecha" />
                <TableColumn fx:id="clientNameCol" prefWidth="200.0" text="Cliente" />
                <TableColumn fx:id="equipmentCol" prefWidth="350.0" text="Equipo" />
                <TableColumn fx:id="statusCol" prefWidth="100.0" text="Estado" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button onAction="#onViewDetailsClicked" text="Ver Detalles/Cerrar" />
                <Button fx:id="editSheetButton" onAction="#onEditSheetClicked" text="Editar Hoja" />
                <Button onAction="#onPrintReceptionClicked" text="Imprimir Recepción" />
                <Button onAction="#onPrintClosureClicked" text="Imprimir Cierre" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="salirButton" onAction="#onSalirClicked" text="Salir" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
